.navbar
  margin-bottom: 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.3);
  text-transform: uppercase;
  background-color: #000000;

  a
    color: get-color('neutral','contrast');
  li
    & a:hover
    & a:focus
    &.active a
      outline: none;
      background-color: rgba(255, 255, 255, 0.2);
    a
      transition: background 0.3s ease-in-out;

  .navbar-brand
    width: 300px;
    height: 50px;
    line-height: 50px;
    padding: 0;

    &:focus
      outline: none;

    &:hover svg.logo path
    &:focus svg.logo path
      d: path("m4,1h4v8h-5v-3M15,3v-2h-4v8h4v-2");
      stroke-dasharray: 10 1;
      stroke-dashoffset: -20;
      stroke: get-color('accent')
      animation: dash 1s linear infinite;

    svg.logo
      margin: 0 1rem;
      height:40px;
      width: 40px;
      vertical-align: middle
      fill: none;

      path
        stroke: #fff;
        transition: 0.2s;

  .navbar-toggle
    padding: 4px 6px;
    font-size: 16px;
    color: #ffffff;

    &:focus,
    &:active
      outline: none;

  +breakpoint('sm')
    padding: 1rem 0;
    border-bottom: none;
    letter-spacing: 1px;
    background: transparent;
    transition: background 0.5s ease-in-out, padding 0.5s ease-in-out;

    &.top-nav-collapse
      padding: 0;
      background-color: #000000;
      border-bottom: 1px solid rgba(255, 255, 255, 0.3);